<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Evaluate">

    <Button
        android:id="@+id/bckBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:text="Back"
        android:layout_marginTop="10dp"

        />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Evaluate"
    android:textStyle="bold"
    android:textSize="25sp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/bckBtn"
    android:layout_marginTop="20dp"
    android:id="@+id/eval_label"
    />









    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/eval_label"
        android:layout_marginTop="20dp"
        android:text="Select Review No."
        android:textSize="20sp"
        android:id="@+id/label_rno_eval"

        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/rNumber_eval"
        android:layout_below="@+id/label_rno_eval"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterMark_label"
        android:text="Enter Marks :"
        android:textSize="20sp"
        android:layout_below="@+id/rNumber_eval"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="300dp"
        android:layout_below="@id/enterMark_label"
        android:layout_marginTop="20dp"
        android:id="@+id/enterMark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterRemark_label"
        android:text="Enter Remarks :"
        android:textSize="20sp"
        android:layout_below="@+id/enterMark"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_below="@id/enterRemark_label"
        android:layout_marginTop="20dp"
        android:id="@+id/enterRemark"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_below="@+id/enterRemark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/Finish"
        />





</RelativeLayout>