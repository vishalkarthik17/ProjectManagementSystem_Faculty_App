<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schedule_Review">
    <Button
        android:id="@+id/bckBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bckBtn"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Enter Next Review Details"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/nextReviewBanner"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nextReviewBanner"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Tap Here to Select Date"
        android:id="@+id/mmddyyyy"
        android:textSize="20sp"
        android:textColor="#0000ff"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mmddyyyy"
        android:layout_marginTop="20dp"
        android:text="Select Review No."
        android:textSize="20sp"
        android:id="@+id/label_rno"

        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/rNumber"
        android:layout_below="@+id/label_rno"
        android:layout_marginTop="10dp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule"
        android:layout_below="@+id/rNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/skeduleBtn"
        />



</RelativeLayout>